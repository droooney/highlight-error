{
  "name": "highlight-error",
  "version": "1.0.0",
  "main": "lib/index.js",
  "typings": "index.d.ts",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "mocha": "^3.4.2",
    "nyc": "^11.0.2"
  },
  "scripts": {
    "build": "babel src --out-dir lib",
    "test": "nyc mocha test/index.js --reporter dot",
    "prepublish": "npm test && npm run build"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "sourceMap": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "test/**/*.js",
      "node_modules/**/*"
    ],
    "reporter": [
      "html"
    ],
    "cache": true,
    "all": true
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "lines-and-columns": "^1.1.6",
    "lodash": "^4.17.4"
  }
}
